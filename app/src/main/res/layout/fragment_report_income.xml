<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scvIncome"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/ts_income"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorbackground"/>
        <TextView
            android:text="@string/ts_income_max"
            android:layout_margin="10dp"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgIncomeMax"
                android:layout_gravity="center"
                android:layout_width="32dp"
                android:layout_height="32dp"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:layout_width="250dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtIncomeMaxType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtIncomeMaxDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/txtIncomeMaxValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorbackground"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:text=""
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtIncomeInfo"
            android:textColor="#DA3232"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>
        <com.razerdp.widget.animatedpieview.AnimatedPieView
            android:id="@+id/pvIncome"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorbackground"/>
        <nguyen.huy.moneylover.MainLayout.MyExpandableListview
            android:layout_marginTop="10dp"
            android:id="@+id/elvIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </nguyen.huy.moneylover.MainLayout.MyExpandableListview>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/vieFooter"/>
    </LinearLayout>

</ScrollView>