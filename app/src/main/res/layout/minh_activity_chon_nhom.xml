<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MinhLayout.ChonNhomActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorFloatButton"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgbtnBack"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@color/colorFloatButton"
            android:onClick="xuLyThoat"
            android:paddingRight="10dp"
            app:srcCompat="@drawable/back2_picture" />

        <TextView
            android:id="@+id/txtChonNhom"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="Chọn nhóm"
            android:textColor="@color/colorbackgroundLuu"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgbtnSearch"
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@color/colorFloatButton"
            android:paddingRight="10dp"
            app:srcCompat="@drawable/search1" />

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabChonNhom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFloatButton"
        app:tabIndicatorColor="@color/colorbackgroundBack"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorbackgroundBack">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/ViewPChonNhom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>
</LinearLayout>