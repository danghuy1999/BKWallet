<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackgroundListView"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorbackgroundBack"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNgayLV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorbackgroundBack"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="590dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorbackgroundBack"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtThuLV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="0"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtThangNamLV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="8sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtSoTienLV"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Đang tính toán..."
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>
    <nguyen.huy.moneylover.MainLayout.MyListview
        android:id="@+id/lvInListview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorbackgroundBack"
        android:divider="@null" />

</LinearLayout>