<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgbtnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:onClick="xuLyThoatPhuongThucThanhToan"
            app:srcCompat="@drawable/back2_picture" />

        <TextView
            android:id="@+id/txtThemGiaoDich"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Phương thức thanh toán"
            android:textColor="@color/colorbackgroundLuu"
            android:textSize="18sp" />

    </LinearLayout>
    <ListView
        android:id="@+id/lvPhuongThucThanhToan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorbackgroundBack"
        android:divider="@color/colorbackgroundBack"
        android:dividerHeight="5dp" />

</LinearLayout>