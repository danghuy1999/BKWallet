<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_report_4"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="@string/ts_outcome_max"
                android:textAllCaps="true"
                android:textColor="#FFF176"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="horizontal"
                android:paddingStart="?android:attr/expandableListPreferredItemPaddingLeft"
                android:paddingTop="5dp"
                android:paddingEnd="25dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/imgOutcomeMax"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txtOutcomeMaxType"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="0dp"
                    android:gravity="center"
                    android:textColor="#FFF176"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtOutcomeMaxValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFF"
                    android:gravity="end"
                    android:textSize="18sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/txtOutcomeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textAllCaps="true"
                android:textColor="#64B5F6"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.razerdp.widget.animatedpieview.AnimatedPieView
                android:id="@+id/pvOutcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp" />

            <ExpandableListView
                android:id="@+id/elvOutcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:childDivider="#00000000"
                android:dividerHeight="1dp" />
        </LinearLayout>


    </ScrollView>
</LinearLayout>
