<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".Authentication.UserInfoActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avtUser"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/images" />

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:drawableRight="@drawable/ic_edit_white_24dp"
        android:drawablePadding="20dp"
        android:fontFamily="@font/font_sofia"
        android:paddingLeft="30dp"
        android:paddingRight="10dp"
        android:text="Luffy"
        android:textColor="#123456"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/custom_user_info"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Số tiền trong ví :"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtBalance"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Email  :"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnChangePass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custom_user_info_button"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Đổi mật khẩu"
            android:textAllCaps="false"
            android:textColor="#C925D5"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>